@using P1.Services
@using MudBlazor
@using P1.Models
@inherits ViewModelComponentBase

@inject IGameplayRulesService _gameplayRulesService

<MudDropZone Class="hand-drop-zone m-5 rounded-lg d-flex flex-grow-1  flex-wrap " T="CardVM"
             Identifier="hand"
             CanDrop="@((card) => _gameplayRulesService.CanCardBeMovedToHand(card))"/>
             
<style>
    .hand-drop-zone {
        align-items: center;
        justify-content: center;
        min-width: 900px;
        max-width: 900px;
        min-height: 137px;
        max-height: 137px;
        display: flex
    }

    .hand-drop-zone .card {
        margin: 7px;
    }

</style>