@using MudBlazor

<MudCard @attributes="UserAttributes" Class="@Class" Style="width: 250px; height: 250px; background-color: var(--); cursor: pointer;">
    <MudCardHeader>
        <MudText Typo="Typo.h5">
            @UpgradeTitle
        </MudText>
    </MudCardHeader>
    <MudCardContent>
        @ChildContent
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool IsClicked { get; set; } = false;
    [Parameter] public string UpgradeTitle { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public IDictionary<string, object> UserAttributes { get; set; }
    
    public string Class => $"ma-5 upgrade-card {(IsClicked ? "clicked-card" : "")}";
}